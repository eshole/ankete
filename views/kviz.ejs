<html>
<head>
    <title> <%= title %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</head>
<body>
<div class="container">
    <div class="row align-items-center justify-content-center">
        <div class="col-6">
            <h3><%= message %></h3>
        </div>
    </div>
</div>
<% if (message != 'Standby') {%>
<div class="row justify-content-center" style="margin-top: 5%">
    <div class="col-6">
    <form method="POST" action="/student/odgovor/<%= pitanje.id %>">
        <% if(pitanje.tip == 1) {%>
            <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" id="da" name="odgDA" class="custom-control-input">
                <label class="custom-control-label" for="da">Da</label>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" id="ne" name="odgNE" class="custom-control-input">
                <label class="custom-control-label" for="ne">Ne</label>
            </div>
        <%} else if (pitanje.tip == 2) {%>
            <% for(let i=0; i<odgovori.length; i++) {%>
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="<%= odgovori[i].id %>">
                    <label class="custom-control-label" for="<%= odgovori[i].id %>"><%= odgovori[i].value %></label>
                </div>
            <%}%>
        <%} else {%>
            <div class="form-group">
                <label for="odg">Odgovor:</label>
                <input type="text" class="form-control" id="odg" name="odg">
            </div>
        <%}%>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    </div>
<%}%>
</div>
</body>
</html>